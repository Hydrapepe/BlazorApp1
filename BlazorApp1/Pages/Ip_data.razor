@page "/base"

@using BlazorApp1.Data
@inject WeatherForecastService ForecastService
<h1>Launch statistics table</h1>
@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Host Name</th>
                <th>IP</th>
                <th>CheckSum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
            <tr>
                <td>@forecast.HostName</td>
                <td>@forecast.IP</td>
                <td>@forecast.CheckSum </td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetForecastAsync();
    }
}
